{
  "name": "@frgryr1/rspack-config",
  "version": "1.0.0",
  "description": "Unified plugin-based configuration system for Rspack bundler",
  "keywords": ["rspack", "webpack", "configuration", "plugin", "react", "bundler"],
  "author": "frgryr1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/frgryr2001/universal-build-config.git",
    "directory": "packages/rspack-config"
  },
  "homepage": "https://github.com/frgryr2001/universal-build-config#readme",
  "bugs": {
    "url": "https://github.com/frgryr2001/universal-build-config/issues"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rslib build",
    "dev": "rslib build --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@frgryr1/compiler-core": "^1.0.1"
  },
  "peerDependencies": {
    "@rspack/core": ">=1.0.0",
    "@rspack/plugin-react-refresh": ">=1.0.0"
  },
  "peerDependenciesMeta": {
    "@rspack/core": {
      "optional": true
    },
    "@rspack/plugin-react-refresh": {
      "optional": true
    }
  },
  "devDependencies": {
    "@rslib/core": "^0.0.5",
    "@rspack/core": "^1.5.1",
    "@rspack/plugin-react-refresh": "^1.4.3",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5",
    "@repo/test-utils": "workspace:*"
  }
}
