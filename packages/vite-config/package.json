{
  "name": "@frgryr1/vite-config",
  "version": "1.0.0",
  "description": "Unified plugin-based configuration system for Vite bundler",
  "keywords": ["vite", "configuration", "plugin", "react", "pwa", "bundler"],
  "author": "frgryr1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/frgryr2001/universal-build-config.git",
    "directory": "packages/vite-config"
  },
  "homepage": "https://github.com/frgryr2001/universal-build-config#readme",
  "bugs": {
    "url": "https://github.com/frgryr2001/universal-build-config/issues"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rslib build",
    "dev": "rslib build --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@frgryr1/compiler-core": "^1.0.1"
  },
  "peerDependencies": {
    "vite": ">=7.0.0",
    "@vitejs/plugin-react": ">=4.0.0",
    "@vitejs/plugin-react-swc": ">=4.0.0",
    "vite-plugin-pwa": ">=1.0.0"
  },
  "peerDependenciesMeta": {
    "vite": {
      "optional": true
    },
    "@vitejs/plugin-react": {
      "optional": true
    },
    "@vitejs/plugin-react-swc": {
      "optional": true
    }
  },
  "devDependencies": {
    "@rslib/core": "^0.0.5",
    "@vitejs/plugin-react": "^4.3.2",
    "@types/node": "^24.3.0",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5",
    "@repo/test-utils": "workspace:*"
  }
}
